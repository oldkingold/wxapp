.hk_bg {
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 0.5;
  position: fixed;
  z-index: 1000;
}

.hk_main {
  position: fixed;
  background-color: white;
  width: 650rpx;
  height: 616rpx;
  margin: 38rpx 50rpx 0 50rpx;
  opacity: 1;
  z-index: 1001;
  border-radius: 20rpx;
}

.hk_title {
  font-size: 29rpx;
  line-height: 29rpx;
  font-weight: bold;
  margin-left: 36rpx;
  margin-top: 50rpx;
}

.hk_content {
  font-size: 28rpx;
  line-height: 42rpx;
  margin-top: 10rpx;
  margin-left: 36rpx;
  margin-right: 36rpx;
  text-indent: 58rpx;
}

.hk_table {
  background-color: #eef2f3;
  margin-top: 28rpx;
  margin-left: 36rpx;
  margin-right: 36rpx;
  border-radius: 10rpx;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}

.hk_table .hk_td{ 
  display: flex;
  font-size: 21rpx;
  margin-left: 22rpx;
  margin-right: 22rpx;
  line-height: 38rpx;
}

.hk_table .hk_td .title{ 
  width: 100rpx;
}
