.hk_info {
  font-size: 29rpx;
  margin-top: 22rpx;
  margin-left: 36rpx;
  margin-right: 36rpx;
  font-weight: bold;
}

.hk_btn {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  line-height: 74rpx;
  text-align: center;
  margin: 73rpx 36rpx 0 36rpx;
}

.hk_zw {
   color: #7a7a7a;
   background-color: #f2f2f2;
   height: 70rpx;
   width: 256rpx; 
   border-radius: 40rpx;
   border: 2rpx solid #dedede;
}

.hk_qr {
  color: white;
  background-color: #f4a500;
  height: 74rpx;
  width: 256rpx;
  border-radius: 40rpx;
}

.cancel {
  position: fixed; 
  z-index: 1005;
  display:flex;
  flex-direction: column;
  align-items: center;
  margin-top: 626rpx;
  margin-left: 343rpx;
}

.cancel .line {
  width: 5rpx;
  height: 60rpx;
  background-color: white;
}

.cancel .image {
  width: 60rpx;
  height: 60rpx;
  border: 5rpx solid #ffffff; 
  border-radius: 34rpx;
}

.cancel .image image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}
