.Toast {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
    /* background: rgba(255,255,255,1); */
    z-index: 99999;
}

.Toast .mask {
    padding: 20rpx 30rpx;
    background: rgba(0, 0, 0, 0.7);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    align-items: center;
    border-radius: 6rpx;
    box-sizing: border-box;
    max-width: 70%;
    z-index: 2;
}
 
.Toast .mask .icon {
    margin-right: 20rpx;
}

.Toast .mask .icon .image {
    width: 60rpx;
    height: 60rpx;
}

.ToastBg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
    z-index: 1;
}

.loading_icon{
    width: 60rpx;
    height: 60rpx;
    margin-top: 10rpx;
}

.Toast .mask  .msg {
    flex: 1;
    color: rgb(230, 227, 227);
    line-height: 40rpx;
    font-size: 28rpx;
    white-space: pre-wrap;
}