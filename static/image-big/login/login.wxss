 page {
  height: 100%;
} 

.top {
  background-color: #19559e;
}

.top image{
  width: 150rpx;
  height: 150rpx;
}
.container{
  height: 100%;
  background-color: #f5f5f5;
}
.logo {
  width: 280rpx;
  height: 112rpx;
  margin: 0 auto;
  margin-bottom: 40rpx;
}

.login-title {
  margin-bottom:35rpx;
  display:flex;
  justify-content:space-around;
}

.text-center {
  text-align: center;
  display: flex;
  flex-direction: column;
}

form {
  width: 600rpx;
  text-align: center;
  margin: 0 auto;
}

input {
  height: 96rpx;
  line-height: 96rpx;
  text-align: left;
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 26rpx;
  border: 0px;
  display: inline-flex;
   width: 100%;  
}

.login-btn {
  border: none;
  width: 40%;
  font-size: 31rpx;
  padding: 0;
  color: whitesmoke;
  letter-spacing: 2rpx;
  display:flex;
  justify-content:center;

}

.login-btn:after {
  border: none;
}

.btn-area button {
  display:block;
  height:84rpx;
  margin-top:60rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius:40rpx;
  background:#007AFF;
  color:#fff;
  cursor:pointer;
  text-align:center;
  font-size:32rpx;
  line-height:84rpx;
}

.section {
  position: relative;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  flex-direction: row;
}

.section button {
  position:absolute;
  right:0;
  top:24rpx;
  background:transparent;
  font-size:26rpx;
  color:#007AFF;
  padding-top:3rpx;
  z-index:99;
  border:1rpx solid #007AFF;
}

.section button:after {
  border: none;
}

.login-text {
  display: flex;
  flex-direction: row;

  position: fixed;
  bottom: 40rpx;
  margin-left:28rpx;
  margin-right: 28rpx; 
}

.login-text image{
  width: 48rpx;
  height: 28rpx;
  margin-top: 5rpx;
  margin-right: 10rpx;
}

.login-text view{
  color: #999;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: left;
}

.activ {
  text-align: center;
  color: whitesmoke;
  position:relative;
}

.activ:after {
  content: url('data:image/png;base64,');
  width: 56rpx;
  /* height: 28rpx; *//* border: 8px solid transparent;  *//* border-left: 8px solid #AFABAB; */
  position: absolute;
  top: 48rpx;
  left: 120rpx;
}

.hide {
  display: none;
}

.block {
  position: absolute;
  display: block;
  right: 0;
  top: 30rpx;
  z-index: 99;
}

.viewimage {
  margin-right: 18rpx;
  display: flex;
}

.block image {
  width: 40rpx;
  height: 50rpx;
}

form {
  width: 96%;
  padding:0 15rpx 0 15rpx;
  background-color: #f5f5f5;
}

.section .header {
  width:32rpx;
  height:37rpx;
  margin: auto 18rpx;
}

.section .header image{
  width:32rpx;
  height:37rpx;
}


.others{
  margin-top:35rpx;
}

.left{
  position: absolute;
  left: 40rpx;
  color: #007AFF;
}

.register{
  position: absolute;
  right: 40rpx;
}

.register text{
  color: #007AFF
}

.showmsg{
  height: 70rpx;
  text-align:left;

}

.img{
  float: right; 
  
  margin-top:16rpx;
}


