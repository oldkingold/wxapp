page{
  height: 100%
}

.container {
  background: #f5f5f5;
  padding-top: 20rpx;
}

.content {
  padding-top: 10rpx;
  background-color: #fff;
  padding-bottom: 28rpx;
}

.top-text {
  margin: 18rpx 18rpx 0 18rpx;
}

.form-item {
  display: flex;
  margin: 18rpx 18rpx 0rpx 18rpx;
  background-color: #fff;
  align-items: center;
}

.content-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  border: 1rpx solid #e6e6e6;
  border-radius: 8rpx;
  height: 80rpx;
  padding-left: 18rpx;
}

.sides {
  display: flex;
  align-items: center;
  height: 80%;
}

.item-name {
  white-space: nowrap;
}

.column-line {
  width: 1rpx;
  border-right: 1rpx solid #e6e6e6;
  height: 60%;
  margin-left: 18rpx;
}

.sides input {
  margin-left: 26rpx;
  margin-right: 26rpx;
}

.block {
  display: block;
  right: 0;
  top: 30rpx;
  z-index: 99;
}

.viewimage {
  margin-right: 18rpx;
  display: flex;
}

.viewimage image {
  width: 22px;
  height: 28px;
}

.form-item button {
  display: block;
  border-radius: 16rpx;
  color: #007aff;
  cursor: pointer;
  text-align: center;
  border: 1rpx solid #007aff;
  font-size: 26rpx;
  margin-left: 18rpx;
  width: 40%;
}

.login-btn {
  height: 86rpx;
  line-height: 86rpx;
  color: #fff;
  font-size: 30rpx;
  width: 80%;
  background: #007aff;
  border-radius: 45rpx;
  margin-top: 80rpx;
  letter-spacing: norow;
}


.img{
  float: right; 
  margin-left:8px;
}