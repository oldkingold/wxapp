.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
width:540rpx;
overflow:hidden;
position:fixed;
top:25%;
left:13%;
z-index:9999;
background:#FFFFFF;
border-radius:36rpx;
}


.modal-title {
padding-top:28rpx;
font-size:32rpx;
color:#030303;
text-align:center;
font-weight:500;

}

.modal-desc{
  color:#A2A2A2;
margin-bottom:14rpx;

}

.modal-content {
padding:50rpx 32rpx;
padding-top:16rpx;
display:flex;
flex-direction:column;
align-items:center;
padding-bottom:16rpx;

}

.modal-line {
  font-size:26rpx;
  font-weight:600;
  height:40rpx;

}

.modal-footer {

  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
justify-content:center;

}

.btn-cancel {

  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;

}

.btn-confirm {

width:50%;
color:#4C9BFB;
text-align:center;
font-size:36rpx;
letter-spacing:2rpx;


}