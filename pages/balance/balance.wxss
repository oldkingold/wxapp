margin-bottom:20rpx;

}
.tab-h {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
}

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
  font-weight:600;
  font-size:30rpx;
  letter-spacing:2rpx;
  color: #1B1B1B
}

.tab-item.active {
  color:#0D7EF6;
  position:relative;
  font-weight:600;
  font-size:30rpx;
  letter-spacing:2rpx;

}
.tab-item.active:after {
  content: "";
  display: block;
  height: 4rpx;
  width: 86rpx;
  background: #0D7EF6;
  position: absolute; 
  bottom: 5rpx;
  left: 18rpx;
  border-radius: 16rpx;
}

