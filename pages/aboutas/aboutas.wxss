.container {
  background: #f5f5f5;
}

.top{
  display:flex;
  justify-content:space-around;
  background-color:#195AAA;
  padding-top:60rpx;
  padding-bottom:60rpx;
}


.t-left image{
  width: 136rpx;
  height: 136rpx;
}

.t-right{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}
.comp-name{
  color:white;
  font-size:40rpx;
  font-weight:500;
  letter-spacing:2prx;
  line-height:50rpx;
}
.comp-en{
  color:#B7E4FF;
  font-size:22rpx;
  font-weight:400;
}
.comp-quotes{
  color:#B7E4FF;
  font-size: 22rpx;
  line-height:60rpx;
}

.content{
  margin: 26rpx 0;
  background-color:white;
  padding:30rpx;
}
.title{
  font-size:30rpx;
  font-weight:700;
  line-height:68rpx;
  margin-bottom: 30rpx;
}

.text{
  font-size:26rpx;
  line-height:40rpx;
}
.bottom{
  background-color:white;
  padding:30rpx;
}

.bottom-content{
  display:flex;
  justify-content:space-between;
}

.b-left{
  display: flex;
  flex-direction: column;

}

.b-line{
  display: flex;
  align-items:center;
  line-height:54rpx;
}

.line-value{
  color: #6EB0FA;
  margin-left:12rpx;
}

.b-right image{
  width:130rpx;
  height:130rpx;
}

.b-right{
  display: flex;
  flex-direction: column;
  align-items: center
}

.b-right-desc{
  color: #999999;
  font-size: 24rpx
}
.paragraph {
  margin-bottom: 30rpx;
  line-height: 40rpx; 
  text-align:left;
}