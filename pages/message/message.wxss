page {
  background-color: #e9eff2;
}

.message {
  margin: 33rpx 20rpx 0rpx 20rpx;
  width: auto;
  padding: 24rpx 20rpx;
  background-color: white;
  border-radius: 15rpx;
  box-shadow: 5rpx 8rpx 8rpx 3rpx #c9c9c9;
}

.date {
  display: flex;
  align-items: center;
  color: #878787;
  font-size: 27rpx;
}

.date image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 15rpx;
}

.content {
  display: flex;
  align-items: baseline;
}

.content .title {
  margin-top: 20rpx;
  margin-right: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  white-space: nowrap
}

.content .info {
  color: #2e2e2e;
  font-size: 28rpx;
  line-height: 41rpx;
  letter-spacing: 1rpx;
}

.info .phone {
  color: #007aff;
  letter-spacing: 0rpx;
  font-size: 27rpx;
  font-family: Arial, Helvetica, sans-serif;
  padding: 0 6rpx;
}
