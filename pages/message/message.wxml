<view class='all_read'><p bindtap="readAll">全部已读</p></view>
<view class='message' wx:for="{{message}}" data-id='{{item.id}}' data-index='{{index}}' bindtap='readMessage'>
  <view class='date'>
    <image src='../../static/images/clock2.png'></image>
    {{item.date}}
  </view>
  <view class='content'>
    <view class='{{item.read != 0 ? "hui":""}} title'>通知内容：</view>
    <view class='{{item.read != 0 ? "hui":""}} info' >
      <block wx:for="{{item.info}}" wx:for-index="i" wx:for-item="info">
        <block wx:if="{{i % 2 == 0}}">
          {{info}}
        </block>
        <block wx:else>
          <text class='phone' bindtap = 'phonecall' data-tel='{{info}}'> {{info}} </text>
        </block>
      </block>
    </view>
  </view>
</view>
