@import "/pages/home/home.wxss";

page {
  background-color: #ebf0f5;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.desc {
  background-color: #fff;
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.desc-objetc {
  width: 92%;
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
}

.desc-title {
  line-height: 40rpx;
  padding-bottom: 20rpx;
  font-size: 30rpx;
}

.desc-title1 {
  line-height: 50rpx;
  font-size: 35rpx;
}

.desc-title2 {
  font-size: 33rpx;
  margin-bottom: 35rpx;
}

.desc-content {
  display: flex;
  flex-direction: column;
  align-items: left;
  padding: 20rpx;
  background-color: #edf1f2;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.invoice-line {
  display: flex;
  border-bottom:1rpx solid #F2F2F2;
  font-size: 32rpx;
}

.invoice-comp-name {
  line-height: 54rpx;
  width: 160rpx;
}

.invoice-comp-value {
  line-height: 54rpx;
  margin-left: 18rpx;
}

.invoice-line-name-common {
  line-height: 54rpx;
  width: 160rpx;
}

.invoice-line-value-common {
  line-height: 54rpx;
  margin-left: 18rpx;
}

.text-font {
  font-size: 26rpx;
}

.button {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #f4a600;
  color: white;
  text-align: center;
}

.title {
  line-height: 80rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-weight: bold;
  margin-bottom: -25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.more{
  font-size: 28rpx;
  color: #479df7;
  line-height: 28rpx;
  display: flex;
  align-items: center;  
}

.more image{
  height: 28rpx;
  width: 28rpx;
  margin-left: 8rpx;
}

.meetings {
  display: flex;
  flex-direction: column;
  align-items:  center;
}

.bmcard {
  background-color: white;
  width:726rpx;
  border-radius:14rpx;
  margin-top: 25rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  line-height: 50rpx;
}

.bmcard view {
  margin-left: 25rpx;
  margin-right: 25rpx;
  height: 50rpx;
}

.bmcard .bmtitle {
  font-weight: bold;

  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}







