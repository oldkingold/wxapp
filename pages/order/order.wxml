  <view class='bg_h60 bg_ebf0f5' > </view>
  <view class='contact bg_ebf0f5' style='min-height:{{screenHeight}}px'>
    <block wx:if="{{bm_orders.length > 0}}">
      <view class='card1' wx:for="{{bm_orders}}" wx:key="index" catchtap='toOrderdetail' data-id='{{index}}'>
        <view class='top'>
          <view >
            <view class='dd' bindtouchend="touchend" catchlongtap="copy" data-key="订单号" data-value="{{item['order_id']}}" >订单号：{{item['order_id']}}</view>
            <view class='ddd'>{{item['created_at']}}</view>
          </view>
          <view class='bm_check' catchtap='remit' data-id='{{item["id"]}}' data-money='{{item["price"]}}' wx:if="{{item['status'] == 1}}">确认汇款</view>
          <image wx:if="{{item['status'] == 7}}" class='status' src='../../static/images/success.png'></image>
          <view wx:if="{{item['status'] == 2}}" class='hk'>汇款确认中</view>
          <view wx:if="{{item['status'] == 3}}" class='hk'>退款中</view>
          <view wx:if="{{item['status'] == 6}}" class='hk' style='color:#f6b72c'>已支付</view>
          <image wx:if="{{item['status'] == 4}}" class='status' src='../../static/images/refund.png'></image>
          <!-- <image wx:if="{{item['status'] == 5}}" class='status' src='../../static/images/dd-fail.png'></image> -->
          <view wx:if="{{item['status'] == 5}}" class='hk' style='color:#ababab'>已取消</view>
        </view>
        <view class='bottom'>
          <view class='flex'><view style='white-space: nowrap;'>参加会议：</view>
            <text class='content'>{{item['meeting_name']}}</text>
          </view>
          <view class='flex'>会议时间：
            <text class='content'>{{item['meeting_start_date']}}</text>
          </view >
          <view class='flex'>订单金额：
            <text class='content'>{{item['price']}}</text>
          </view >
        </view>
      </view>
      <view hidden='{{bm_loadingMoreHidden}}' class="no-more-goods">没有更多啦</view>
    </block>  

    <view class='nolog' wx:else>
      <image src='/static/images/nolog@3x.png'></image>
      <view class='nolog-text'>暂无记录</view>
    </view>
  </view>
</block>
