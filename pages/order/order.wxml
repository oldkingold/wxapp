<orderhk id='orderhk' show='{{orderhkShow}}' money='{{orderhkMoney}}' orderId='{{orderhkId}}' orderType='{{nav}}' bindconfirmPayment='confirmPayment'></orderhk>

<view class='menu top0'>
  <view class='nav_title' wx:if="{{login == 0}}">
    <view catchtap='nav' data-id='0' class="nav_hover {{ nav == 0 ? 'nav_select' : ''}}"> 充值订单 </view>
    <view wx:if="{{nav == 0}}" class="nav_active"></view>
  </view>
  <view class='nav_title' >
    <view catchtap='nav' data-id='1' class="nav_hover {{ nav == 1 ? 'nav_select' : ''}}"> 报名订单 </view>
    <view wx:if="{{nav == 1 && login == 0}}" class="nav_active"></view>
  </view>
</view>

<block wx:if="{{nav == 0}}">
  <view class='top38'>
    <view class='menu'>
      <view class='nav_price'>余额：<text class='red'>￥{{balance["remainder"]}}</text></view>
      <view class='nav_price'>使用中：￥{{balance["using"]}}</view>
      <view class='nav_price'>已使用：￥{{balance["used"]}}</view>
    </view>
    <!-- <view class='bg_ebf0f5' style='height:60rpx'></view> -->
  </view>

