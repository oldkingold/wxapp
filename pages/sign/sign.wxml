<view class="container text-center" >
  <view class='top'>
    <image class="logo" src="/static/images/dcjy_logo.png"></image>
  </view>
  <form>
    <view>
      <view class="section">
        <view class='header'>
          <image mode='aspectFit' src='/static/images/gongsi.png'></image>
        </view>
        <input placeholder="请输入公司全称" maxlength="30" bindinput="bind_companyname" />
      </view>

      <!-- <view class="section">
        <view class='header'>
          <image mode='aspectFit' src='/static/images/phone.png'></image>
        </view>
        <input type="number" placeholder="请输入手机号" maxlength="11" bindinput="bind_phone" />
      </view> -->

      <view class="section">
        <view class='header'>
          <image mode='aspectFit' src='/static/images/code@3x.png'></image>
        </view>
        <input placeholder="请输入密码" password maxlength="20" bindinput="bind_passward" />
      </view>

      <view class="section">
        <view class='header'>
          <image mode='aspectFit' src='/static/images/code@3x.png'></image>
        </view>
        <input placeholder="请再次输入密码" password maxlength="20" bindinput="bind_repassward" />
      </view>
    </view>

    <view class="btn-area">
      <button bindtap="login" >注册</button>
      <view class='others'>
        <!-- <navigator url='/pages/reset/reset' open-type="navigate" hover-class="other-navigator-hover" class='left'>忘记密码</navigator> -->
        <navigator  class='register' url='/pages/login/login' open-type="redirect" hover-class="other-navigator-hover" >
           <view>已有账号，去<text>登录</text></view>
        </navigator>
      </view>
    </view>
  </form>
  <view class="login-text">
    <image mode='aspectFit' src='/static/images/bigwarn@3x.png'></image>
    <view>
      温馨提示：请填写完整的公司名称
    </view>
  </view>
</view>