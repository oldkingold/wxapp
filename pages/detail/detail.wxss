  text-align: center
}
video {
  border-radius: 0.5rem;
  margin-top: 20rpx;
}

.blue {
  color: blue;
}

.card {
  display: flex;
  height: 200rpx;
  margin-top: 30rpx;
  background-color: #f5f5f5;
  border-radius: .25rem;
  box-shadow: #666 0px 0px 5px
}

.card-left {
  margin-left: 20rpx;
  margin-top: 25rpx;
}

.card-left image{
  width: 250rpx;
  height: 150rpx;
}

.card-right {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 25rpx;
}

.card-title {
  font-size: 26rpx;
}

.card-time {
  font-size: 22rpx;
  color: #828282;
}

.card-content {
  font-size: 22rpx;
  color: #828282;
}

.user-icon {
  width: 55rpx;
  height: 55rpx;
  background-color: #d5d5d5;
  border-radius: 50%;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
}

.comment {
  flex-wrap: wrap;
}

.comment-content {
  background-color: #d5d5d5;
  font-size: 25rpx;
  margin-top: 20rpx;
  border-radius: .25rem
}

.comment-info {
  margin: 15rpx;
  color: #828282;
}

.baoming {
  position: fixed;
  bottom: 0rpx;
  height: 90rpx;
  width: 100%;
  background-color: #f3a401;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.baoming .price {
  float: left;
  color: white;
  font-size: 22rpx;
  margin-left: 30rpx;
}

.baoming .price text{
  font-size: 38rpx;
}

.baoming .bm {
  float: right;
  background-color: white;
  color: #f3a401;
  font-size: 32rpx;
  padding: 10rpx 40rpx 10rpx 40rpx;
  border-radius: 35rpx;
  margin-right: 30rpx;
}