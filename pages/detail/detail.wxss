.wximg {
  max-width: 100%;
}

page {
  background-color: #f0f2f5;
}

.top{
  margin-bottom: 20rpx;
}

.top-img {
  width: 100%;
  height: 290rpx;
}


.middle-content {
  text-align: left;
  font-size: 30rpx;
  /* font-family: PingFangSC-Regular; */
  text-indent: 2em;
  margin-bottom: 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.detail {
  margin-top: 30rpx;
}

.detail-item {
  display: flex;
  flex-direction: row;
  background-color: white;
  height: 70rpx;
  border-bottom: 1px solid #f0f2f5
}

.detail-item-left {
  display: flex;
  align-items: center;
  margin-left: 15rpx;
}

.detail .detail-item:nth-of-type(odd) .left-icon{
  width: 15rpx;
  height: 60%;
  background-color: #49aab1;
}

.detail .detail-item:nth-of-type(even) .left-icon{
  width: 15rpx;
  height: 60%;
  background-color: #f4a600;
}

