.left-content {
  margin-left: 20rpx;
  font-size: 33rpx;
  font-weight: bold
}

.detail-item-right {
  display: flex;
  align-items: center;
  position: absolute;
  right: 15rpx;
  height: 70rpx;
}

.right-content {
  font-size: 28rpx;
  color: #828282;
  margin-right: 10rpx;
}

.right-img image{
  width: 30rpx;
  height: 30rpx;
}

.chxz {
  background-color: white;
}

.chxz-content{
  padding-top: 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: flex-start;
}

.chxz-img {
  margin-top: -2rpx;
}

.chxz-img image{
  width: 30rpx;
  height: 30rpx;
}

.chxz-content-detail {
  margin-left: 15rpx;
  text-align: left;
  line-height: 35rpx;
}

.chxz-content-title {
  font-size: 30rpx;
}

.chxz-content-info {
  font-size: 28rpx;
  color: #828282;
}
.time{
  color: #ff2b2b;
}

.hotel {
  color: #1b79f8;
}

.tip{
  font-size: 25rpx;
}

.black {
  color: black
}

.block {
  display: block
}

.no-margin{
  margin-left: 0rpx;
