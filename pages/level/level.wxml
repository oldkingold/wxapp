<view class='container'>
  <view class='bg'>
    <view class='card {{vip_type > 1 ? "":"white"}}' bindtap='toDiscountlog'>
      <image wx:if="{{vip_type > 1}}" src='/static/images/Vip1/{{vip1[vip_type].bg}}'></image>
      <image wx:else src='/static/images/Vip1/card.png'></image>
      <view class='top'>
          <image src='/static/images/duchuancard.png'></image>
          <view class='text'>
            <view class='text1'>{{company}}山西西山金城建筑有限公司临汾分公司</view>
            <view class='text2'>会员卡</view>
          </view>
      </view>

      <view class="viptype">
        <image mode="aspectFit"  src='/static/images/Vip1/{{vip1[vip_type].icon}}common.png' > </image>
        <view>银牌会员</view>
      </view>

      <view class="levelline"></view>
      <view class="levellinecover"></view>
      <view class="levellinetip">
        <text class="t1">8000/10000</text>
        <text class="t2">还需消费2000元升级白金会员</text>  
      </view>
      <!-- <view>
        <view>会员卡详情 </view>
        <image></image>
      </view> -->
      <view class='bottom'>
        <view class='left' >
          <text class='text1'>{{balance}}</text>
          <text class='text2'>账户金额</text>
        </view>
        <view class='right' >
          <view>会员卡详情</view>
          <image mode="aspectFit" src="/static/images/gow.png"></image>
        </view>
      </view>


    </view>
    <view class='middle'>
      <view data-url='/pages/infomanage/infomanage' class='line'>
        <image mode="aspectFit" src='/static/images/m_info.png'></image>
        <view class='line-name'>信息维护</view>
        <view class='icon_go'>
          <image class='go' src='/static/images/go.png'></image>
        </view>
      </view>
    </view>
  </view>
</view>
