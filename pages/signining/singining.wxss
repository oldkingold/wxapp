page {
  height: 100%;
  background: #f5f5f5;
}

.container {
  background: #f5f5f5;
  height: 100%
}
.line{
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}
.content{
  width:100%;
  background-color: white;
  padding: 32rpx 18rpx;
  margin-top: 18rpx;
}
.name{
  font-weight: 600;
  font-size: 30rpx;
}
input {
  height: 96rpx;
  line-height: 96rpx;
  text-align: left;
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 26rpx;
  border: 0px;
  display: inline-flex;
  width: 90%;
}

.btn-area {
  background-color: #f5f5f5;
  padding: 0rpx 0rpx;
}

.btn-area button {
  display:block;
  width:89%;
  height:84rpx;
  margin-top:60rpx;
  border-radius:40rpx;
  background:#007AFF;
  color:#fff;
  cursor:pointer;
  text-align:center;
  font-size:32rpx;
  line-height:84rpx;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width:86%;
  overflow:hidden;
  position:fixed;
  top:9%;
  z-index:9999;
  background:#FFFFFF;
  border-radius:36rpx;
  height:80%;
  margin:auto 8%;
}


.modal-title {
  padding-top:28rpx;
  font-size:32rpx;
  color:#030303;
  text-align:center;
  font-weight:500;
  padding-bottom:9px;
  border-bottom:1rpx solid #F5F5F5;
}

.modal-desc{
  color:#A2A2A2;
  margin-bottom:14rpx;
}

.modal-content {
  padding:50rpx 32rpx;
  padding-top:16rpx;
  display:flex;
  flex-direction:column;
  align-items:center;
  padding-bottom:16rpx;
  width: 100%;
  height: 80%;
}

.modal-line {
  font-size:26rpx;
  font-weight:600;
  height:40rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
  justify-content:center;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width:50%;
  color:#4C9BFB;
  text-align:center;
  font-size:36rpx;
  letter-spacing:2rpx;
}

.myCanvas{
  width:96%;
  height:100%;
  margin:18rpx auto;
  border:1rpx solid #F4F4F4;
}