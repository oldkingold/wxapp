  line-height: 54rpx;
}

.staff-tel-value {
  margin: 0 40rpx;
  color: #479df7;
}

.target-object {
  height: 54rpx;
  line-height: 54rpx;
  width: 98%;
}

.target-value {
  margin: 0 40rpx;
  color: #479df7;
}

.staff-addr-value {
  color: #333;
}

.staff-postcode {
  margin-bottom: 15rpx;
}

.staff-postcode-value {
  color: #333;
}

.buttom {
  background-color: #eeeff1;
  float: left;
  width: 100%;
  height: 80rpx;
}

