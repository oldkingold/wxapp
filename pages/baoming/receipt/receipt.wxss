page {
  background-color: #eeeff1;
  font-size: 32rpx;
}

.receipt {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.receipt-top {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 30rpx;
}

.receipt-icon {
  margin-top: 30rpx;
}

image {
  width: 99px;
  height: 100px;
  display: inline-block;
  overflow: hidden;
}

.receipt-info {
  font-weight: bold;
  font-size: 36rpx;
  letter-spacing: 2rpx;
  margin-bottom: 12rpx;
}

.receipt-desc {
  font-weight: 500;
  font-size: 32rpx;
}

.middle {
  background-color: #fff;
}

.arrive-time-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* margin-top: 15rpx; */
}

.middle-line {
  width: 92%;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #eeeff1;
}

.middle-name {
  /* line-height: 80rpx; */
  width: 140rpx;
  margin-right: 36rpx;
  font-size: 36rpx;
  white-space: nowrap;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.middle-value {
  /* line-height: 80rpx; */
  margin-top: 22rpx;
  font-size: 32rpx;
  margin-bottom: 18rpx;
}

.dinner-name-hidden {
  visibility: hidden
}

.middle-buttom {
  width: 86%;
  display: flex;
  flex-direction: column;
  align-items: left;
  padding: 28rpx 28rpx 18rpx 28rpx;
  background-color: #edf1f2;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
}

.text-font {
  font-size: 26rpx;
}

.trangle {
  width: 20rpx;
  height: 16rpx;
  margin-top: -26rpx;
  margin-left: 12rpx;
}

.invoice-line {
  display: flex;
  border-bottom:1rpx solid #F2F2F2;
  font-size: 32rpx;
  
}

.invoice-comp-name {
  line-height: 54rpx;
  width: 160rpx;
}

.invoice-comp-value {
  line-height: 54rpx;
  margin-left: 18rpx;
}

.invoice-line-name-common {
  line-height: 54rpx;
  width: 160rpx;
}

.invoice-line-value-common {
  line-height: 54rpx;
  margin-left: 18rpx;
}

.desc {
  background-color: #fff;
  margin: 28rpx 0;
  display: flex;
  justify-content: center;
}

.desc-objetc {
  width: 92%;
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
}

.desc-title {
  /* height: 80rpx; */
  line-height: 40rpx;
  padding-bottom: 20rpx;
  font-size: 30rpx;
}

.desc-content {
  display: flex;
  flex-direction: column;
  align-items: left;
  padding: 20rpx;
  background-color: #edf1f2;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.contact {
  width: 100%;
  background-color: #fff;
}

.contact-main {
  margin-left: 20rpx;
}

.item {
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.staff-object {
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #eeeff1;
  width: 100%;
  font-weight: 600;
}

.emp {
  display: flex;
  flex-direction: column;
}

.staff-emp {
  height: auto;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.staff-emp-desc {
  height: 54rpx;
  line-height: 54rpx;
}

.staff-emp-item {
  height: 54rpx;
  line-height: 54rpx;
  margin-left: 40rpx;
