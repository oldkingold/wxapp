page {
  background: #f5f5f5;
}

.container {
  background: #f5f5f5;
  padding-bottom: 80rpx;
  font-size: 27rpx;
  line-height: 27rpx;
}

.com-info-object {
  margin-left: 18rpx;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 25rpx;
  font-weight: 600;
}

.com-item {
  display: flex;
  flex-direction: column;
  padding: 14rpx 18rpx 0rpx 18rpx;
  background-color: #fff;
  margin-bottom: 36rpx;
  color: #373737;
}

.com-info-item {
  display: flex;
  height: 54rpx;
  align-items: center;
}

.info-name {
  white-space: nowrap;
  width: 105rpx;
}

.info-value {
  margin-left: 54rpx;
}

.com-bottom-item {
  border-top: 1rpx solid #D9D9D9;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  height: 80rpx;
  align-items: center;
  margin-top: 13rpx;
}

.bottom-left {
  display: flex;
}

.bottom-right {
  display: flex;
  margin-left: 36rpx;
}

.icon image {
  width: 28rpx;
  height: 28rpx;
}

.operation {
  margin-left: 18rpx;
  line-height: 28rpx;
}

.add-cominfo {
  color: #fff;
  width: 339rpx;
  height: 65rpx;
  text-align: center;
  margin: 0rpx auto;
  background-color: #007AFF;
  line-height: 65rpx;
  border-radius: 36rpx;
  margin-bottom: 30rpx;
}

.conferee-object {
  margin-left: 18rpx;
  font-weight: 600;
  height: 88rpx;
  line-height: 88rpx;
}

.conferee-item{
  display:flex;
  flex-direction:column;
  padding:14rpx 18rpx 0rpx 18rpx;
  background-color:#fff;
  margin-bottom:24rpx;
}

.conferee-info-item{
  display: flex;
  align-items:center;
  height:60rpx;
}

.conferee-name{
  font-size: 32rpx;
  line-height: 59rpx;
  min-width: 105rpx;
}

.conferee-phone{
  line-height: 54rpx;
}

.add-conferee{
  background-color: #fff;
  padding: 0rpx  26rpx 28rpx 26rpx;
  line-height: 59rpx;
}

.add-conferee-item{
  display: flex;
  align-items: center;
  height:80rpx;
  border-bottom: 1rpx solid #D9D9D9;
}

.add-conferee-item input{
  font-size: 27rpx;
}

.add-conferee-item input{
  margin-left: 54rpx;
  width: 450rpx;
}

.add-conferee-button{
  color: #fff;
  width: 338rpx;
  height: 63rpx;
  text-align: center;
  margin: 0rpx auto;
  line-height: 63rpx;
  border-radius: 36rpx;
  background-color: #007AFF;
  margin-top: 28rpx;
  font-size: 27rpx;
}



.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width:86%;
  overflow:hidden;
  position:fixed;
  top:24%;
  z-index:9999;
  background:#FFFFFF;
  border-radius:36rpx;
  margin:auto 8%;
}


.modal-title {
padding-top:28rpx;
font-size:32rpx;
color:#030303;
text-align:center;
font-weight:500;
padding-bottom:9px;
border-bottom:1rpx solid #F5F5F5;

}

.modal-desc{
  color:#A2A2A2;
  margin-bottom:14rpx;
  
}

.modal-content {
  padding:0rpx 28rpx;
  display:flex;
  flex-direction:column;
  justify-content: flex-start;
}

.modal-line {
  font-size:26rpx;
  font-weight:600;
  height:40rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 80rpx;
  justify-content:center;
}
.btn-confirm {
  width:50%;
  color:#4C9BFB;
  text-align:center;
  font-size:32rpx;
  letter-spacing:2rpx;
  border-right: 1rpx solid #DEDEDE;
}