.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width:86%;
  overflow:hidden;
  position:fixed;
  top:9%;
  z-index:9999;
  background:#FFFFFF;
  border-radius:36rpx;
  margin:auto 8%;
}


.modal-title {
padding-top:28rpx;
font-size:32rpx;
color:#030303;
text-align:center;
font-weight:500;
padding-bottom:9px;
border-bottom:1rpx solid #F5F5F5;

}

.modal-desc{
  color:#A2A2A2;
margin-bottom:14rpx;

}

.modal-content {
padding:50rpx 32rpx;
padding-top:16rpx;
display:flex;
flex-direction:column;
justify-content: flex-start;
padding-bottom:16rpx;
    width: 100%;
    height: 80%;
}

.modal-line {
  font-size:26rpx;
  font-weight:600;
  height:40rpx;

}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
  justify-content:center;
}
.btn-confirm {
  width:50%;
  color:#4C9BFB;
  text-align:center;
  font-size:36rpx;
  letter-spacing:2rpx;
  border-right: 1rpx solid #DEDEDE;
}